{
  "workbench.colorTheme": "Noctis Minimus",
  "workbench.colorCustomizations": {
    "statusBar.background": "#e4b781",
    "statusBar.foreground": "#2b2035"
  },
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",

  "git.autofetch": true,
  "git.enableSmartCommit": true,
  
  "terminal.integrated.env.osx": {},
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "terminal.integrated.fontSize": 13,

  "diffEditor.wordWrap": "on",

  "files.autoSave": "afterDelay",

  "breadcrumbs.enabled": false,

  "console-ninja.featureSet": "Community",

  "debug.console.fontFamily": "FiraCode Nerd Font Mono",
  "debug.console.fontSize": 13,
  "debug.console.lineHeight": 1.2,

  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.experimental.asyncTokenization": true,
  "editor.guides.bracketPairs": true,
  "editor.lineHeight": 0,
  "editor.lineNumbers": "relative",
  "editor.formatOnSave": true,
  "editor.fontFamily": "Monolisa Script, monospace",
  "editor.fontLigatures": "'calt' on, 'liga' on, 'ss01' on, 'ss02' on, 'ss03' on, 'ss07' on, 'ss08' on, 'ss09' on, 'ss11' on, 'ss12' on",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "entity.name.type.class",
          "keyword",
          "constant",
          "storage.modifier",
          "storage.type.class.js"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",

  "javascript.updateImportsOnFileMove.enabled": "always",

  "keyboard.dispatch": "keyCode",

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "$(capture)*.json, $(capture)*.config.mjs, $(capture)*.config.cjs, $(capture)*.config.ts, .editorconfig, .prettierrc, .prettierignore, pnpm-lock.yaml, pnpm-workspace.yaml",
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*"
  }
}
